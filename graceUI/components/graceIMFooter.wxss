/* graceUI/components/graceIMFooter.wxss */
@font-face {font-family: "graceIMFonts"; src:url('data:application/x-font-woff;charset=utf-8;base64,');}
.graceIMFonts {font-family:"graceIMFonts" !important; font-size:16px; font-style:normal;}
.icon-voice:before{content: "\e617";}
.icon-photograph:before {content:"\e60b";}
.icon-close:before {content:"\e78a";}
.grace-footer{display:flex; position:fixed; z-index:10; left:0; bottom:0; background:#FFFFFF; width:100%; height:90rpx; flex-wrap:nowrap; overflow:hidden; box-shadow:1px 1px 6px #888;}
.grace-footer .grace-input{width:100%; margin:15rpx 20rpx; padding:0 15rpx; background:#F4F5F6; height:60rpx; border-radius:60rpx; flex-wrap:nowrap; display:flex;}
.grace-footer .grace-items{width:auto; line-height:90rpx; flex-shrink:0;}
.grace-im-menus{width:80rpx; height:90rpx; flex-shrink:0; line-height:90rpx; text-align:center; font-size:50rpx;}
.grace-im-input{width:100%; margin:15rpx 5rpx; padding:0 15rpx; background:#F4F5F6; border-radius:5px; min-height:60rpx; flex-wrap:nowrap; margin-left:10px;}
.grace-im-input input{width:100%; background:#F4F5F6; height:60rpx; line-height:60rpx; border-radius:5px;}
.grace-im-record{width:100%; position:fixed; bottom:0; background:#FFF; padding:30px 0; padding-bottom:50px; z-index:11; box-shadow:1px 1px 6px #888;}
.grace-im-record-close{width:50px; height:50px; position:absolute; top:0px; right:0px; z-index:100; justify-content:center; line-height:50px; color:#ccc; font-size:30px;}
.grace-im-record-txt{text-align:center; line-height:30px; padding-bottom:10px; color:#ccc;}
.grace-im-record-btn{width:60px; height:60px; margin:0 auto; border:5px solid #F1F2F3; border-radius:100%; background:#00B26A;}
.grace-im-recording{background:#FF0000;}
.grace-im-record-txt text{color:#333333; padding:0 12px;}